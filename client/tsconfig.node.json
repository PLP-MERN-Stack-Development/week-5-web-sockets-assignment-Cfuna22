{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": ["node"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }